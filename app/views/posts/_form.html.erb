<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field form-group">
    <% form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field form-group">
    <% form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name"  %>
  </div>

  <div class="field form-group">
    <% form.label :age, style: "display: block" %>
    <%= form.number_field :age, class:"form-control", placeholder:"Age"  %>
  </div>

  <div class="field form-group">
    <% form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number"  %>
  </div>

  <div class="field form-group">
    <% form.label :status, style: "display: block" %>
    <%= form.text_field :status, class:"form-control", placeholder:"Hired/Being Interview/Rejected"  %>
  </div>

  <div class="actions">
    <%= form.submit "Create", class:'btn btn-secondary' %>
  </div>
<% end %>
